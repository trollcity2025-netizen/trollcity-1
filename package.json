{
  "name": "troll-city",
  "version": "1.0.0",
  "description": "A production-ready broadcasting application with a troll-themed twist! Built with React, TypeScript, Supabase, and Agora for real-time streaming.",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"vite\" \"nodemon\"",
    "build": "vite build",
    "preview": "vite preview",
    "start": "tsx api/server.ts",
