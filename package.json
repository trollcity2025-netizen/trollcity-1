    "test:store-card": "node test-store-card-connection.mjs",
    "test:all": "npm run test:store-card && npm run check"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.6",
    "@supabase/supabase-js": "^2.45.4",
    "agora-rtc-sdk-ng": "^4.22.0",
    "agora-token": "^2.0.4",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "lucide-react": "^0.511.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.28.0",
    "sonner": "^1.7.0",
    "square": "^43.2.1",
    "tailwind-merge": "^3.0.2",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
