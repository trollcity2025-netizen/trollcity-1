import React, { useEffect, useState } from 'react'
import { supabase } from '../lib/supabase'
import { Home, Crown, Star, Users, ArrowUpRight } from 'lucide-react'
import { useNavigate } from 'react-router-dom'

export default function FamilyCityMap() {
  const [families, setFamilies] = useState<any[]>([])
  const [loading, setLoading] = useState(true)
  const navigate = useNavigate()

  useEffect(() => {
    loadFamilies()
  }, [])

  const loadFamilies = async () => {
    setLoading(true)
    const { data, error } = await supabase.rpc('get_weekly_family_task_counts')
    if (error) console.error(error)
    setFamilies(data || [])
    setLoading(false)
  }

  // Building styles based on task count (rank)
  const getBuildingClass = (tasks: number) => {
    if (tasks >= 30) return 'royal-family'
    if (tasks >= 20) return 'diamond-family'
    if (tasks >= 15) return 'platinum-family'
    if (tasks >= 10) return 'gold-family'
    if (tasks >= 5) return 'silver-family'
    return 'bronze-family'
  }

  return (
    <div className="min-h-screen text-white tc-cosmic-bg p-6 relative">
      <h1 className="text-3xl font-extrabold gradient-text-green-pink mb-6 flex items-center gap-3">
        ğŸ—ºï¸ Troll Family City Map
      </h1>

      <p className="text-gray-300 mb-4">
        Every house represents a Troll Family. The more tasks completed,  
        the bigger and brighter the family's building becomes.
      </p>

      {loading ? (
        <div className="text-center mt-10 animate-pulse">Loading City...</div>
      ) : (
        <div className="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6 p-4">
          {families.map((fam, index) => (
            <div
              key={fam.family_id}
              onClick={() => navigate(`/family/profile?familyId=${fam.family_id}`)}
              className={`
                p-4 rounded-xl cursor-pointer transition transform hover:scale-105
                shadow-lg relative family-building ${getBuildingClass(fam.task_count)}
              `}
            >
              {/* Family Name */}
              <div className="text-lg font-bold mb-2">{fam.family_name}</div>

              {/* Stats */}
              <div className="text-sm text-gray-300">Tasks {fam.task_count}</div>

              {/* Members */}
              <div className="flex items-center gap-1 text-xs text-gray-400 mt-1">
                <Users size={14} /> {fam.member_count || 3} Members
              </div>

              {/* Crown Winner Spot */}
              {index === 0 && (
                <div className="absolute -top-3 -right-3 bg-yellow-500 text-black px-3 py-1 
                                rounded-full text-xs font-bold shadow-lg animate-pulse">
                  ğŸ‘‘ Current Champions
                </div>
              )}

              {/* Visit Button */}
              <div className="mt-3 flex justify-end text-yellow-400 text-xs flex items-center">
                Visit <ArrowUpRight size={14} className="ml-1" />
              </div>
            </div>
          ))}
        </div>
      )}

      {/* Legend Section */}
      <div className="mt-10 p-4 bg-black/50 rounded-lg troll-card">
        <h2 className="text-xl font-bold mb-2">ğŸ  Family Rank Legend</h2>
        <div className="grid grid-cols-2 md:grid-cols-3 gap-2 text-sm">
          <div className="legend-pill bronze">ğŸ¥‰ Bronze Family (0â€“4 tasks)</div>
          <div className="legend-pill silver">ğŸ¥ˆ Silver House (5â€“9 tasks)</div>
          <div className="legend-pill gold">ğŸ¥‡ Gold Tribe (10â€“14)</div>
          <div className="legend-pill platinum">ğŸ’ Platinum Squad (15â€“19)</div>
          <div className="legend-pill diamond">ğŸ’  Diamond Clan (20â€“29)</div>
          <div className="legend-pill royal">ğŸ‘‘ Royal Family (30+ tasks)</div>
        </div>
      </div>
    </div>
  )
}
